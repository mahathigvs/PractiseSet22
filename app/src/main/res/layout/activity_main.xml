<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCDD2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="400dp"
            android:background="#0D47A1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.example.android.practiseset2.MainActivity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ateam"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#4A148C"
                android:textSize="56sp" />

            <Button
                style="@style/Mybutton1"
                android:onClick="twoptsA"
                android:text="+2 points" />

            <Button
                style="@style/Mybutton1"
                android:onClick="threeptsA"
                android:text="+3 points" />

            <Button
                style="@style/Mybutton1"
                android:onClick="sixptsA"
                android:text="+6 points" />

            <Button
                style="@style/Mybutton1"
                android:onClick="sevenptsA"
                android:text="+7 points" />

            <Button
                style="@style/Mybutton1"
                android:onClick="eightptsA"
                android:text="+8 points" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.example.android.practiseset2.MainActivity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bteam"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#4A148C"
                android:textSize="56sp" />

            <Button
                style="@style/Mybutton1"
                android:onClick="twoptsB"
                android:text="+2 points" />

            <Button
                style="@style/Mybutton1"                android:onClick="threeptsB"
                android:text="+3 points" />

            <Button
                style="@style/Mybutton1"
                android:onClick="sixptsB"
                android:text="+6 points" />

            <Button
                style="@style/Mybutton1"
                android:onClick="sevenptsB"
                android:text="+7 points" />

            <Button
                style="@style/Mybutton1"
                android:onClick="eightptsB"
                android:text="+8 points" />
        </LinearLayout>
    </LinearLayout>

    <Button
        style="@style/Mybutton1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="resetScore"
        android:text="Reset" />

</RelativeLayout>
